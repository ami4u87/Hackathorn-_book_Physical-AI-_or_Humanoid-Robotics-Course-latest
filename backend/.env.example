# OpenAI API Configuration
OPENAI_API_KEY=sk-your-api-key-here

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
# For Qdrant Cloud, use your cluster URL and API key:
# QDRANT_URL=https://your-cluster.qdrant.io
# QDRANT_API_KEY=your-qdrant-api-key

# Neon Postgres Database
DATABASE_URL=postgresql://user:password@localhost:5432/physical_ai_course
# For Neon, use the connection string from your dashboard:
# DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require

# API Configuration
CHATBOT_PORT=8000
API_PROXY_PORT=8001

# JWT Secret for API authentication (generate with: openssl rand -hex 32)
JWT_SECRET=your-secret-key-here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
DAILY_QUOTA_PER_STUDENT=100

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://your-vercel-app.vercel.app

# Logging
LOG_LEVEL=INFO
